1.

SELECT
    title
FROM books
WHERE
    SUBSTRING(title,1,3) = 'The'
ORDER BY id;

2.

SELECT REPLACE(title,'The','***')
    AS "Title"
FROM books
WHERE
        SUBSTRING(title,1,3) = 'The'
ORDER BY id;

3.

SELECT
    id,
    concat((side * height)/2) as "area"
FROM
    triangles
order by id

4.!
SELECT
    title,
    round(cost,3) AS "modified_price"
FROM books


5.
SELECT
    first_name,
    last_name,
    extract(YEAR FROM born)
FROM authors
